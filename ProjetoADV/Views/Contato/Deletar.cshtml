@model UsuarioModel

@{
    ViewData["Title"] = "Deletar Contato";
}

<div class="text-center">
    <h1 class="display-4">Usuario: (@Model.Nome) DELETADO</h1>
    <form method="post">
        <input type="hidden" asp-for="Id" />
        <a role="button" class="btn btn-primary" asp-controller="Contato" asp-action="Index">Não, cancelar operação.</a>
        <button type="submit" class="btn btn-danger">Sim, desejo apagar.</button>
    </form>
</div>